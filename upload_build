#!/bin/bash
cd ./build/libs/

#Gambiarra do Tipo Malandra
find . -type f ! -name '*-all.jar' -delete

FILE_NAME=`echo Miyuki-*`
cd ../../
FILE_LOCATION=`echo "./build/libs/$FILE_NAME"`
WARN=0
if [[ $COMMIT_MSG == *\[D\]* ]]
then
    echo "Uploading $FILE_NAME to VPS Relay [DEBUG]..."
    v=`curl -X POST -F release="0" -F key="$UPLOAD_KEY" -F file="@$FILE_LOCATION" https://vps.adriantodt.cf/relay/miyuki.php`
    echo "$v"
    echo -e "\n$v\n"
else
    WARN=$((WARN++))
fi

if [[ $COMMIT_MSG == *\[R\]* ]]
then
    echo "Uploading $FILE_NAME to VPS Relay [RELEASE]..."
    v=`curl -X POST -F release="1" -F key="$UPLOAD_KEY" -F file="@$FILE_LOCATION" https://vps.adriantodt.cf/relay/miyuki.php`
    echo "$v"
    echo -e "\n$v\n"
else
    WARN=$((WARN++))
fi

if [ $WARN -eq 2 ]
then
    echo "Build discarded."
fi