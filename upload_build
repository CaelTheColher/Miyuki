#!/bin/bash
cd ./build/libs/

#Gambiarra do Tipo Malandra
find . -type f ! -name '*-all.jar' -delete

FILE_NAME=`echo Miyuki-*`
WARN=0
if [[ $COMMIT_MSG == *\[D\]* ]]
then
    echo "Uploading ./$FILE_NAME to VPS Relay [DEBUG]..."
    echo 'curl -X POST -F release="0" -F key="~HIDDEN~" -F compiledJar="@./$FILE_NAME" https://vps.adriantodt.cf/relay/miyuki.php'
    v=`curl -X POST -F release="0" -F key="$UPLOAD_KEY" -F compiledJar="@./$FILE_NAME" https://vps.adriantodt.cf/relay/miyuki.php`
    echo -e "\n$v\n"
else
    WARN=$((WARN++))
fi

if [[ $COMMIT_MSG == *\[R\]* ]]
then
    echo "Uploading ./$FILE_NAME to VPS Relay [RELEASE]..."
    echo 'curl -X POST -F release="1" -F key="~HIDDEN~" -F compiledJar="@./$FILE_NAME" https://vps.adriantodt.cf/relay/miyuki.php'
    v=`curl -X POST -F release="1" -F key="$UPLOAD_KEY" -F compiledJar="@./$FILE_NAME" https://vps.adriantodt.cf/relay/miyuki.php`
    echo -e "\n$v\n"
else
    WARN=$((WARN++))
fi

if [ $WARN -eq 2 ]
then
    echo "Build discarded."
fi